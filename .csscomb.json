      "border-bottom",
      "border-bottom-width",
      "border-bottom-style",
      "border-left",
      "border-left-width",
      "border-left-style",
      
      "border-radius",
      "border-top-left-radius",
      "border-top-right-radius",
      "border-bottom-right-radius",
      "border-bottom-left-radius",
      "border-image",
      "border-image-source",
      "border-image-slice",
      "border-image-width",
      "border-image-outset",
      "border-image-repeat",
      
      "visibility",
      "float",
      "clear",
      
      "overflow",
      "overflow-x",
      
      "overflow-y",
      "clip",
      "zoom",
      
      "flex-direction",
      "flex-order",
      "flex-pack",
      "flex-align",
      
      "box-sizing"
    ],
    
    [
      "color",
      "background-color",
      "background",
      "border-top-color",
      "border-right-color",
      "border-bottom-color",
      "border-left-color",
      "outline-color"
    ],
    
    [
      "font",
      "font-family",
      "font-size",
      "font-weight",
      "font-style",
      "font-variant",
      "font-size-adjust",
      "font-stretch",
      "font-effect",
      "font-emphasize",
      "font-emphasize-position",
      "font-emphasize-style",
      "font-smooth",
      
      "text-shadow",
      
